        </header>
        <section class="content-main">
            <div class="content-header">
                <h2 class="content-title">Coupons</h2>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-9">
                            <header class="border-bottom mb-4 pb-4">
                                <div class="row">
                                    <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
                                        <a href="./addcoupon">
                                          <button class="btn btn-danger">Add Coupon</button>
                                        </a>
                                      </h2>
                            </header>
                            <!-- card-header end// -->
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>NO</th>
                                            <th>NAME</th>
                                            <th>AMOUNT</th>
                                            <th>USER COUNT</th>
                                            <th>DISCOUNT TYPE</th>
                                            <th>EXPIRY DATE</th>
                                            <th>ACTIONS</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% coupons.forEach((coupon, index) => { %>
                                            <tr>
                                                <td><b><%= index + 1 %></b></td>
                                                <td><%= coupon.code %></td>
                                                <td><%= coupon.discountAmount %></td>                                              
                                                <td><%= coupon.maxUsers %></td>
                                                <td><%= coupon.discountType %></td>
                                                <td><%= new Date(coupon.expiryDate).toLocaleDateString('en-US', { year: 'numeric', month: '2-digit', day: '2-digit' }) %></td>
                                                <td class="px-4 py-3">
                                                    <div class="flex items-center space-x-4 text-sm">
                                                      <a href="/admin/editCoupon?id=<%=coupon._id%>">
                                                        <button style="background-color: green; color: white;" class="action-button edit-button" aria-label="Edit">
                                                          Edit
                                                        </button>
                                                      </a>
                                                      <a href="/admin/deleteCoupon?id=<%=coupon._id%>">
                                                        <button style="background-color: red; color: white;" class="action-button delete-button" aria-label="Delete">
                                                          Delete
                                                        </button>
                                                      </a>
                                                    </div>
                                                  </td>
                                                  
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                            
                            <!-- table-responsive.// -->
                        </div>               
                    </div>            
                </div>        
            </div>


