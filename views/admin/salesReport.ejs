                      <thead id="reportHeader">
                        <tr>
                          <th>Email</th>
                          <th>mobile</th>
                          <th>Address</th>
                          <th>OrderId</th>
                          <th>Date</th>
                          <th>Payment Method</th>
                          <th>Total</th>
                          <th>Status</th>
                          <th>Qty</th>
                          <th>Product Name</th>
                        </tr>
                      </thead>
                      <tbody id="reportBody">
                        <% salesReport.forEach(order=>{ %>
