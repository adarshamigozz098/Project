    ></script>

    <script>
      const deleteButtons = document.querySelectorAll(".deleteBtn");

      deleteButtons.forEach((button) => {
        button.addEventListener("click", function () {
          const categoryId = this.dataset.categoryId;

          console.log(categoryId);

          axios  
            .post(`/admin/category/deleteCategory?id=${categoryId}`)
            .then((response) => {
              if (response.data.success) {
                location.reload();
              }
            })
            .catch((error) => {
              console.error(error);
            });
        });
      });
    </script>
<script>
  const listOrUnlistButtons = document.querySelectorAll(".listBtn");

  listOrUnlistButtons.forEach((button) => {
    button.addEventListener("click", async function () {
      const categoryId = this.dataset.categoryId;

      try {
        const response = await axios.post(`/admin/category/listOrUnlist?id=${categoryId}`);
        
      
        const updatedCategoryData = response.data;

       
        if (updatedCategoryData.is_listed) {
          this.textContent = "Unlist";
          this.classList.remove("btn-success");
          this.classList.add("btn-danger");
        } else {
          this.textContent = "List";
          this.classList.remove("btn-danger");
          this.classList.add("btn-success");
        }

       
        const badge = this.closest("tr").querySelector(".badge");
        badge.textContent = updatedCategoryData.is_listed ? "Listed" : "Unlisted";
        badge.classList.remove(updatedCategoryData.is_listed ? "bg-danger" : "bg-success");
        badge.classList.add(updatedCategoryData.is_listed ? "bg-success" : "bg-danger");

      } catch (error) {
        console.log(error);
      }
    });
  });
</script>

