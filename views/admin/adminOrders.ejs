  <script>
    function updateOrderStatus(event) {
      var selectElement = event.target;
      var selectedValue = selectElement.value;

      if (selectedValue === 'Returned' || selectedValue === 'Cancelled') {
        selectElement.disabled = true;
      }
    }
  </script>
