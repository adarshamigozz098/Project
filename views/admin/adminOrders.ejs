    <section class="content-main">
      <div class="content-header">
        <div>
          <h2 class="content-title card-title"><B>USER ORDERS</B></h2>
          <p></p>
        </div>
      </div>
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="col-lg-12 stretch-card">
            <div class="card">
              <div class="card-body">
                </p>
                <div class="table-responsive">
                  <table class="table table-bordered table-contextual" id="example">
                    <thead>
                      <tr>
                        <th>Order ID</th>
                        <th>Product</th>
                        <th>Customer</th>
                        <th>Total Price</th>
                        <th>Order Date</th>
                        <th>Payment Method</th>
                        <th>Status</th>
                        <th></th>
                        <th>Items</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (Orders.length===0) { %>
                        <tr>
                          <td colspan="9">No orders found</td>
                        </tr>
                        <% } else { %>
                          <% Orders.reverse().forEach(order=> { %>
                            <% order.items.forEach(item=> { %>
                              <tr>
                                <td>
                                  <%= order.order_id %>
                                </td>
                                <td>
                                  <%= item.product_id ? item.product_id.name : 'Product Not Available' %>
                                </td>
                                <td>
                                  <%= order.username %>
                                </td>
                                <td>
                                  <%= order.total_amount %>
                                </td>
                                <td>
                                  <%= new Date(order.date).toLocaleDateString() %>
                                </td>
                                <td>
                                  <%= order.payment %>
                                </td>
                                <td>
                                  <div class="status-dropdown-container">
                                    <select style="text-align: center;" class="form-control status-dropdown"
                                      name="status" data-order-id="<%= order.order_id %>"
                                      data-product-id="<%= item.product_id ? item.product_id._id : '' %>"
                                      onchange="updateOrderStatus(event)">
                                      <% ['Placed', 'Delivered' , 'Requested return' , 'Returned' , 'Cancelled'
                                        , 'pending' ].forEach(status=> { %>
                                        <% if ((item.ordered_status==='Cancelled' || item.ordered_status==='Returned' )
                                          && status !==item.ordered_status) { %>
                                          <option value="<%= status %>" disabled>
                                            <%= status %>
                                          </option>
                                          <% } else { %>
                                            <option value="<%= status %>" <%=status===item.ordered_status ? 'selected'
                                              : '' %>><%= status %>
                                            </option>
                                            <% } %>
                                              <% }); %>
                                    </select>
                                  </div>
                                </td>
                                <td>
                                  <button id="save" class="btn-primary" onclick="reloadPage()">save</button>
                                </td>
                                <td>
                                  <a href="/admin/detail?orderId=<%= order.order_id %>">
                                    <button class="btn-primary">Detail</button>
                                  </a>
                                </td>
                              </tr>
                              <% }); %>
                                <% }); %>
                                  <% } %>
                        </tbody>


                    <div class="pagination-area mt-30 mb-50">
                      <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-start">
                          <% if (currentPage> 1) { %>
                            <li class="page-item"><a class="page-link" href="?page=1&search=<%= searchTerm %>">1</a>
                            </li>
                            <% } %>
                              <% for (let i=2; i <=totalPages; i++) { %>
                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                  <a class="page-link" href="?page=<%= i %>&search=<%= searchTerm %>">
                                    <%= i %>
                                  </a>
                                </li>
                                <% } %>
                                  <% if (currentPage < totalPages) { %>
                                    <li class="page-item">
                                      <a class="page-link" href="?page=<%= totalPages %>&search=<%= searchTerm %>">
