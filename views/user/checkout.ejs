        const housename = document.getElementById('housename').value;
        const city = document.getElementById('city').value;
        const state = document.getElementById('state').value;
        const phone = document.getElementById('phone').value;
        const pincode = document.getElementById('pincode').value;

        const isValid = validateForm(name, housename, city, state, phone, pincode);

        if (!isValid) {
          return;
        }
        try {

          const response = await fetch('/profile/address', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ name, housename, city, state, phone, pincode })
          });

          const result = await response.json();
          if (result.success) {
            swal("Success!", "Address added successfully", "success").then(() => {
              $('#addAddressModal').modal('hide');
              location.reload();
            });
          } else {
            swal("Error!", "Failed to add address", "error");
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Internal Server Error');
        }
      });
      function validateForm(name, housename, city, state, phone, pincode) {

        clearErrors();
        let isValid = true;

        if (name.trim() === '') {
          displayError('nameError', 'Please enter a name.');
          isValid = false;
        }

        if (housename.trim() === '') {
          displayError('housenameError', 'Please enter a house name.');
          isValid = false;
        }

        if (city.trim() === '') {
          displayError('cityError', 'Please enter a city.');
          isValid = false;
        }

        if (state.trim() === '') {
          displayError('stateError', 'Please enter a state.');
          isValid = false;
        }

        if (phone.trim() === '' || isNaN(phone) || phone.length !== 10) {
          displayError('phoneError', 'Please enter a valid phone number (10 digits).');
          isValid = false;
        }

        if (pincode.trim() === '' || isNaN(pincode) || pincode.length !== 6) {
          displayError('pincodeError', 'Please enter a valid pincode (6 digits).');
          isValid = false;
        }

        return isValid;
      }

      function displayError(fieldId, errorMessage) {
        const errorSpan = document.getElementById(fieldId);
        errorSpan.innerText = errorMessage;
        errorSpan.style.display = 'block';
      }

      function clearErrors() {
        const errorSpans = document.querySelectorAll('.error-message');
        errorSpans.forEach(span => {
          span.innerText = '';
          span.style.display = 'none';
        });
      }
    </script>

