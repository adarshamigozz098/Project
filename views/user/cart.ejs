<script>


function updateQuantity(input, change) {
	var oldValue = parseFloat(input.value);
	var maxValue = parseFloat(input.getAttribute("max"));
  
	if (!isNaN(oldValue)) {
	  var newValue = oldValue + change;
  
	  if (newValue >= 1 && (isNaN(maxValue) || newValue <= maxValue)) {
		input.value = newValue;
		updateTotalPrice(input);
		const productId = input.closest("tr").querySelector(".remove-product").getAttribute("data-product-id");
		const newQuantity = newValue;
  
		fetch("/updateQuantity", {
		  method: "POST",
		  headers: {
			"Content-Type": "application/json",
		  },
		  body: JSON.stringify({ productId, quantity: newQuantity }),
		})
		.then(response => {
		  if (!response.ok) {
