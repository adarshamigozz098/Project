    <%- include('../user/layout/nav') %>


        <!DOCTYPE html>
        <html lang="en">

         <head>
            <meta charset="utf-8" />
            <link rel="apple-touch-icon" sizes="76x76" href="/user/img/apple-icon.png">
            <link rel="icon" type="image/png" href="/user/img/favicon.ico">
            <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
            <title>SHOEzzo</title>
            <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no'
                name='viewport' />

            <link href="/user/fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
            <link rel="stylesheet" href="/user/maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />

            <link href="/user/css/bootstrap.min.css" rel="stylesheet" />
            <link href="/user/css/light-bootstrap-dashboard.css?v=2.0.0 " rel="stylesheet" />

            <link href="/user/css/demo.css" rel="stylesheet" />
        </head>


        <body>
            <style>
                .bg-dark {
                    background-color: #dbcc8f !important;
                    margin-top: -21px;
                }
            </style>
            <style>
                .card {
                    margin-bottom: 20px;
                    border-radius: 8px;
                    box-shadow: 0 0 10px rgba(64, 255, 0, 0.1);
                }

                .card-header {
                    background-color: lightblue;
                    padding: 15px;
                    border-top-left-radius: 8px;
                    border-top-right-radius: 8px;
                }

                .card-body {
                    padding: 20px;
                }

                .btn-outline-primary {
                    color: #007bff;
                    border-color: #007bff;
                }

                .btn-outline-danger {
                    color: #dc3545;
                    border-color: #dc3545;
                }

                .btn {
                    margin-top: 5px;
                }

                .mt-5 {
                    margin-top: 5px;
                }

                .damu {
                    margin-bottom: -48px;
                    margin-left: 4px;
                }

                body {
                    font-family: 'Arial', sans-serif;
                    margin: 0;
                    padding: 0;
                    background-color: #f4f4f4;
                }

                header {
                    background-color: #333;
                    color: #fff;
                    padding: 1em;
                    text-align: center;
                }

                main {
                    max-width: 800px;
                    margin: 20px auto;
                    padding: 20px;
                    background-color: #fff;
                    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                    border-radius: 8px;
                }

                .wallet-card {
                    background-color: #2980b9;
                    color: #fff;
                    padding: 20px;
                    border-radius: 8px;
                    margin-bottom: 20px;
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                }

                .wallet-card img {
                    width: 60px;
                    height: 60px;
                    border-radius: 50%;
                    margin-right: 15px;
                    border: 2px solid #fff;

                }

                .wallet-card-info {
                    flex: 1;
                }

                .wallet-card h2 {
                    margin-bottom: 5px;
                }

                .wallet-card p {
                    color: #f0f0f0;
                    margin: 0;
                }

                h1 {
                    color: #333;
                }

                .wallet-balance {
                    font-size: 24px;
                    margin-bottom: 20px;
                    color: #333;
                }

                .transaction-history {
                    border-top: 2px solid #ddd;
                    margin-top: 20px;
                    padding-top: 20px;
                }

                .transaction-item {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    padding: 10px 0;
                    border-bottom: 1px solid #ddd;
                }

                .transaction-item span {
                    flex: 1;
                }

                .transaction-amount {
                    font-weight: bold;
                    color: #555;
                }

                .transaction-date {
                    color: #888;
                }
            </style>

            <div class="sidebar-wrapper" style="background-color: #f4f4f4e8;">
                <div class="logo">
                    <a href="http://www.creative-tim.com" class="simple-text">
                        SHOEzzo
                    </a>
                </div>
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">
                            <i class="nc-icon nc-circle-09"></i>
                            <p><B>PROFILE</B></p>
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/profile/orders">
                            <i class="nc-icon nc-circle-09"></i>
                            <p><B>ORDERS</B></p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="/profile/address">
                            <i class="nc-icon nc-circle-09"></i>
                            <p><B>ADDRESS</B></p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="/profile/wallet">
                            <i class="nc-icon nc-circle-09"></i>
                            <p><B>WALLET</B></p>
                        </a>
                    </li>
                </ul>
            </div>
            </div>

            <div class="main-panel">

                <nav class="navbar navbar-expand-lg " color-on-scroll="500">
                    <div class="container-fluid">
                        <a style="color: #21ff04;" href="/"><b>HOME</b></a>
                        <a style="margin-left: 10px;color: #1eff00;" href="/shop"><B>SHOP</B></a>
                        <button href="" class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                            aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-bar burger-lines"></span>
                            <span class="navbar-toggler-bar burger-lines"></span>
                            <span class="navbar-toggler-bar burger-lines"></span>
                        </button>
                        <div class="collapse navbar-collapse justify-content-end" id="navigation">
                            <ul class="nav navbar-nav mr-auto">
                                <li class="nav-item">
                                    </a>
                                </li>
                            </ul>
                            <ul class="navbar-nav ml-auto">


                                <li class="nav-item">
                                    <a class="nav-link" href="/logout">
                                        <span style="color: #c70000;" class="no-icon"><B>LOGOUT</B></span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>

                <!-- End Navbar -->
                <main>
                    <div class="wallet-card">
                        <img src="https://via.placeholder.com/150" alt="User Avatar">
                        <div class="wallet-card-info">
                            <h2>
                                <%= user.username %> Wallet
                            </h2>
                            <p></p>
                        </div>
                    </div>
                    
                    <div class="wallet-balance">
                        <p>Wallet Balance: <%= user.wallet %></p>
                    </div>
                    
                    <h2>Transaction History</h2>
                    <% walletTransactions.forEach(history => { %>
                        <div class="transaction-history">
                            <div class="transaction-item">
                                <span>Date</span>
                                <span class="transaction-amount">
                                    <%= moment(history.timestamp).format('DD/MM/YYYY') %>
                                </span>
                            </div>
                            <div class="transaction-item">
                                <span>Amount</span>
                                <span class="transaction-amount">
                                    <%= history.amount %>
                                </span>
                            </div>
                            <div class="transaction-item">
                                <span>Type</span>
                                <span class="transaction-amount">
                                    <%= history.type %>
                                </span>
                            </div>
                        </div>
                    <% }) %>
                    
                    <!-- Pagination Links -->
                    <div class="row mt-5">
                        <div class="col text-center">
                            <div class="block-27">
                                <ul>
                                    <% if (currentPage > 1) { %>
                                        <li><a href="/profile/wallet?page=<%= currentPage - 1 %>">&lt;</a></li>
                                    <% } %>
                                    <% for (let i=1; i <= totalPages; i++) { %>
                                        <li <%=i===currentPage ? 'class="active"' : '' %>>
                                            <a href="/profile/wallet?page=<%= i %>">
                                                <span>
                                                    <%= i %>
                                                </span>
                                            </a>
                                        </li>
                                    <% } %>
                                    <% if (currentPage < totalPages) { %>
                                        <li><a href="/profile/wallet?page=<%= currentPage + 1 %>">&gt;</a></li>
                                    <% } %>
                                </ul>
                            </div>
                        </div>
                    </div>
                </main>
                
                
        </body>

        <script src="/user/js/core/jquery.3.2.1.min.js" type="text/javascript"></script>
        <script src="/user/js/core/popper.min.js" type="text/javascript"></script>
        <script src="/user/js/core/bootstrap.min.js" type="text/javascript"></script>

        <script src="/user/js/plugins/bootstrap-switch.js"></script>

        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>

        <script src="/user/js/plugins/chartist.min.js"></script>

        <script src="/user/js/plugins/bootstrap-notify.js"></script>
        <script src="/user/js/light-bootstrap-dashboard.js?v=2.0.0 " type="text/javascript"></script>

        <script src="/user/js/demo.js"></script>

      </script>

       </html>
    <%- include('../user/layout/footer') %>