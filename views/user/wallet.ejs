                body {
                    font-family: 'Arial', sans-serif;
                    margin: 0;
                    padding: 0;
                    background-color: #f4f4f4;
                }

                header {
                    background-color: #333;
                    color: #fff;
                    padding: 1em;
                    text-align: center;
                }

                main {
                    max-width: 800px;
                    margin: 20px auto;
                    padding: 20px;
                    background-color: #fff;
                    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                    border-radius: 8px;
                }

                .wallet-card {
                    background-color: #2980b9;
                    color: #fff;
                    padding: 20px;
                    border-radius: 8px;
                    margin-bottom: 20px;
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                }

                .wallet-card img {
                    width: 60px;
                    height: 60px;
                    border-radius: 50%;
                    margin-right: 15px;
                    border: 2px solid #fff;

                }

                .wallet-card-info {
                    flex: 1;
                }

                .wallet-card h2 {
                    margin-bottom: 5px;
                }

                .wallet-card p {
                    color: #f0f0f0;
                    margin: 0;
                }

                h1 {
                    color: #333;
                }

                .wallet-balance {
                    font-size: 24px;
                    margin-bottom: 20px;
                    color: #333;
                }

                .transaction-history {
                    border-top: 2px solid #ddd;
                    margin-top: 20px;
                    padding-top: 20px;
                }

                .transaction-item {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    padding: 10px 0;
                    border-bottom: 1px solid #ddd;
                }

                .transaction-item span {
                    flex: 1;
                }

                .transaction-amount {
                    font-weight: bold;
                    color: #555;
                }

                .transaction-date {
                    color: #888;
                }
            </style>

