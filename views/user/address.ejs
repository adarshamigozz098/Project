                    </div>
                </div>
            </nav>
            <!-- End Navbar -->

            
            <div class="container">
                <a href="/addAddress"><button class="add-address-button">Add Address</button></a>
               
                <% if (Data && Data.address && Data.address.length > 0) { %>
                    <% Data.address.forEach((item) => { %>
                      <div class="card fade-in">
                        <div class="address-details">
                          <h4><%= item.name %></h4>
                          <p>House Name: <%= item.housename %></p>
                          <p>City: <%= item.city %></p>
                          <p>State: <%= item.state %></p>
                          <p>Phone: <%= item.phone %></p>
                          <p>Pincode: <%= item.pincode %></p>
                          <a href="/profile/editAddress?addressId=<%= item._id %>"><button class="edit-button">Edit</button></a><br>
                          <form action="/profile/address/delete/<%= item._id %>" method="post">
                            <button type="submit" class="delete-button">Delete</button>
                          </form>                      
                        </div>
                      </div>
                    <% }) %>
                  <% } else { %>
                    <div class="no-address">
                      <p>No addresses found.</p>
                    </div>
                  <% } %>
                  

